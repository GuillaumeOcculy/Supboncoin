<h1 class='center'>Sign In</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag sign_in_path  do %>
      <%= email_field_tag :email,'' ,placeholder: 'Email',class: 'form-control' %>
      <%= password_field_tag :password, '',placeholder: 'Password',class: 'form-control' %>

      <%= submit_tag 'Sign in', class: 'btn btn-success btn-block', data: { disable_with: "Signing in..." } %>
    <% end %>


  </div>
</div>
