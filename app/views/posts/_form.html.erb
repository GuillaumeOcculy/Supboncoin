<%= form_for @post do |f| %>
  <%= f.collection_select :category_id, Category.all, :id, :name %>
  <%= f.text_field :name, placeholder: 'name' %>
  <%= f.text_area :description, placeholder: 'description' %>
  <%= f.number_field :price, placeholder: 'price', min: 0 %>

  <%= f.submit 'Create post' %>
<% end %>
